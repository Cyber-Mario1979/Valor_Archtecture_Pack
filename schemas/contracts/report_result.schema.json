{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "VALOR/report_result.schema.json",
  "title": "VALOR Report Result",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "report_id",
    "report_type",
    "generated_at_utc",
    "wp_summaries",
    "rendered_markdown",
    "completeness"
  ],
  "properties": {
    "report_id": {
      "type": "string"
    },
    "report_type": {
      "type": "string",
      "enum": [
        "WP_TASKS_REPORT"
      ]
    },
    "title": {
      "type": "string"
    },
    "generated_at_utc": {
      "type": "string",
      "format": "date-time"
    },
    "wp_summaries": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": [
          "wp_id",
          "wp_title",
          "tasks_table"
        ],
        "properties": {
          "wp_id": {
            "type": "string"
          },
          "wp_title": {
            "type": "string"
          },
          "wp_scope": {
            "type": "string"
          },
          "tasks_table": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": true,
              "required": [
                "task_id",
                "description",
                "owner",
                "start_date",
                "finish_date",
                "status"
              ],
              "properties": {
                "task_id": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "owner": {
                  "type": "string"
                },
                "start_date": {
                  "type": "string"
                },
                "finish_date": {
                  "type": "string"
                },
                "status": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "sections": {
      "description": "Optional structured sections extracted from the report. The rendered_markdown remains canonical for presentation.",
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": [
          "title"
        ],
        "properties": {
          "title": {
            "type": "string"
          },
          "bullets": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "text": {
            "type": "string"
          }
        }
      }
    },
    "rendered_markdown": {
      "type": "string",
      "minLength": 1
    },
    "completeness": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "percent",
        "missing_items_detected"
      ],
      "properties": {
        "percent": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "missing_items_detected": {
          "type": "boolean"
        },
        "notes": {
          "type": "string"
        }
      }
    }
  }
}